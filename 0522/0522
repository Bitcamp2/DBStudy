--1.
--1) 평점이 3.0에서 4.0사이의 학생을 검색하라(between and)
SELECT SNAME 
	 , AVR
	 FROM STUDENT
	 WHERE AVR BETWEEN 3.0 AND 4.0
	 ORDER BY AVR;

--2) 1994년에서 1995년까지 부임한 교수의 명단을 검색하라(between and)
SELECT PNO 
	 , PNAME 
	 , HIREDATE 
	 FROM PROFESSOR
	 WHERE HIREDATE 
		BETWEEN TO_DATE('1994','yyyy')
		    AND TO_DATE('1995','yyyy')
	ORDER BY HIREDATE;

--3) 화학과와 물리학과, 생물학과 학생을 검색하라(in)
SELECT S.SNAME 
	 , S.MAJOR 
	 FROM STUDENT s 
	 WHERE S.MAJOR IN ('화학','물리');

--4) 정교수와 조교수를 검색하라(in)
SELECT P.PNAME 
	 , P.ORDERS 
	 FROM PROFESSOR p 
	 WHERE P.ORDERS IN ('정교수','조교수');

--5) 학점수가 1학점, 2학점인 과목을 검색하라(in)
SELECT C.CNAME 
	 , C.ST_NUM 
	 FROM COURSE c 
	 WHERE C.ST_NUM IN (1,2);

--6) 1, 2학년 학생 중에 평점이 2.0에서 3.0사이인 학생을 검색하라(between and)
SELECT S.SNAME 
	 , S.SYEAR 
	 , S.AVR 
	 FROM STUDENT s 
	 WHERE S.AVR BETWEEN 2.0 AND 3.0
	   AND S.SYEAR IN (1,2);

--7) 화학, 물리학과 학생 중 1, 2 학년 학생을 성적순으로 검색하라(in)
SELECT S.SNAME 
	 , S.SYEAR 
	 , S.MAJOR 
	 , S.AVR 
	 FROM STUDENT s 
	 WHERE S.MAJOR IN ('화학','물리')
	   AND S.SYEAR IN (1,2)
	 ORDER BY S.AVR;

--8) 부임일이 1995년 이전인 정교수를 검색하라(to_date)
SELECT P.PNAME 
	 , P.ORDERS 
	 , P.HIREDATE 
	 FROM PROFESSOR p 
	 WHERE P.HIREDATE <= TO_DATE('1995/01/01','YYYY/MM/DD'); 
	
--2.
--1) 송강 교수가 강의하는 과목을 검색한다
SELECT P.PNO  
	 , P.PNAME 
	 , C.CNAME 
	 FROM PROFESSOR p 
	 JOIN COURSE c 
	   ON P.PNO = C.PNO 
	 WHERE P.PNAME ='송강';

--2) 화학 관련 과목을 강의하는 교수의 명단을 검색한다
SELECT DISTINCT P.PNAME 
	 , C.CNAME 
	 FROM PROFESSOR p 
	 JOIN COURSE c 
	   ON P.PNO = C.PNO 
	 WHERE C.CNAME LIKE '%화학%';

--3) 학점이 2학점인 과목과 이를 강의하는 교수를 검색한다
SELECT P.PNAME 
	 , C.ST_NUM 
	 FROM PROFESSOR p 
	 JOIN COURSE c 
	   ON P.PNO = C.PNO 
	 WHERE C.ST_NUM =2;
--4) 화학과 교수가 강의하는 과목을 검색한다
SELECT P.PNAME 
	 , C.CNAME 
	 , P."SECTION" 
	 FROM PROFESSOR p 
	 JOIN COURSE c 
	   ON P.PNO = C.PNO
	 WHERE P."SECTION" ='화학';
	
--5) 화학과 1학년 학생의 기말고사 성적을 검색한다
SELECT S.SNAME 
	 , S.SYEAR 
	 , S.MAJOR 
	 ,S2."RESULT" 
	 FROM STUDENT s 
	 JOIN SCORE s2 
	   ON S2.SNO = S.SNO 
	 WHERE S.MAJOR = '화학'
	   AND S.SYEAR =1;

--6) 일반화학 과목의 기말고사 점수를 검색한다
SELECT C.CNAME 
	 , S."RESULT" 
	 FROM COURSE c 
	 JOIN SCORE s 
	   ON C.CNO = S.CNO 
	 WHERE C.CNAME = '일반화학';

--7) 화학과 1학년 학생의 일반화학 기말고사 점수를 검색한다
SELECT S.SNAME 
	 , S.SYEAR 
	 , S.MAJOR 
	 , C.CNAME 
	 , S2."RESULT" 
	 FROM STUDENT s 
	 JOIN SCORE s2 
	   ON S.SNO = S2.SNO 
	 JOIN COURSE c 
	   ON C.CNO = S2.CNO 
	 WHERE S.MAJOR = '화학'
	   AND S.SYEAR =1
	   AND C.CNAME = '일반화학';

--8) 화학과 1학년 학생이 수강하는 과목을 검색한다
SELECT DISTINCT C.CNAME 
	 , S.SYEAR 
	 , S.MAJOR 
	 FROM STUDENT s 
	 JOIN SCORE s2 
	   ON S.SNO = S2.SNO 
	 JOIN COURSE c 
	   ON C.CNO = S2.CNO 
	 WHERE S.MAJOR = '화학'
	   AND S.SYEAR =1;

--9) 유기화학 과목의 평가점수가 F인 학생의 명단을 검색한다
SELECT S.SNO
	 , S.SNAME  
	 , C.CNAME 
	 , SC.RESULT 
	 , GR.GRADE
	 FROM SCORE SC
	 JOIN STUDENT S
	   ON S.SNO = SC.SNO 
	 JOIN COURSE C
	   ON C.CNO = SC.CNO 
	JOIN SCGRADE GR
	   ON SC.RESULT BETWEEN GR.LOSCORE AND GR.HISCORE
	WHERE C.CNAME = '유기화학'
	  AND GR.GRADE = 'F';
--3.
--1) 학생중에 동명이인을 검색한다
SELECT S.SNAME
	 , S.SNO
	 FROM STUDENT s 
	 JOIN STUDENT s2 
	   ON S.SNAME=

--2) 전체 교수 명단과 교수가 담당하는 과목의 이름을 학과(전공????) 순으로 검색한다
SELECT P.PNO 
	 , P.PNAME 
	 , C.CNAME
	 , P."SECTION" 
	 FROM PROFESSOR p 
	 LEFT JOIN COURSE c 
	   ON P.PNO = C.PNO 
	 ORDER BY P."SECTION" ;

--3) 이번 학기 등록된 모든 과목(COURSE)과 담당 교수의 학점 순으로 검색한다?????
SELECT C.CNAME 
	 , P.PNAME 
	 , C.ST_NUM 
	 FROM COURSE c 
	 JOIN PROFESSOR p 
	   ON C.PNO = P.PNO 
	 ORDER BY C.CNAME , C.ST_NUM ;
	 
--4.
--1) 각 과목의 과목명과 담당 교수의 교수명을 검색하라
SELECT C.CNAME 
	 , P.PNAME 
	 FROM COURSE c 
	 JOIN PROFESSOR p 
	   ON C.PNO = P.PNO;

--2) 화학과 학생의 기말고사 성적을 모두 검색하라
SELECT S.SNAME 
	 , S.MAJOR 
	 , S2."RESULT" 
	 FROM STUDENT s 
	 JOIN SCORE s2 
	   ON S2.SNO = S.SNO 
	 WHERE S.MAJOR = '화학';

--3) 유기화학과목 수강생의 기말고사 시험점수를 검색하라
SELECT S.SNAME 
	 , C.CNAME 
	 , S2."RESULT" 
	 FROM STUDENT s 
	 JOIN SCORE s2 
	   ON S2.SNO = S.SNO 
	 JOIN COURSE c 
	   ON C.CNO = S2.CNO 
	 WHERE C.CNAME = '유기화학';

--4) 화학과 학생이 수강하는 과목을 담당하는 교수의 명단을 검색하라
SELECT DISTINCT S2.MAJOR 
	 , C.CNAME 
	 , P.PNAME 
	 FROM PROFESSOR p 
	 JOIN COURSE c 
	   ON P.PNO = C.PNO
	 JOIN SCORE s 
	   ON S.CNO = C.CNO 
	 JOIN STUDENT s2 
	   ON S2.SNO = S.SNO 
	 WHERE S2.MAJOR = '화학';

--5) 모든 교수의 명단과 담당 과목을 검색한다
SELECT P.PNO 
	 , P.PNAME 
	 , NVL(C.CNAME,'담당과목 없음') AS CNAME
	 FROM PROFESSOR p 
	 LEFT JOIN COURSE c 
	   ON C.PNO = P.PNO ;

--6) 모든 교수의 명단과 담당 과목을 검색한다(단 모든 과목도 같이 검색한다)
SELECT P.PNO 
	 , P.PNAME 
	 , NVL(C.CNAME,'담당과목 없음') AS CNAME
	 FROM PROFESSOR p 
	 FULL JOIN COURSE c 
	   ON C.PNO = P.PNO ;


